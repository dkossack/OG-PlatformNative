  <profiles>
    <profile>
      <id>debug-windows-win32-msvc</id>
      <activation>
        <file>
          <exists>${root.dir}/target/profile/debug-windows-win32-msvc</exists>
        </file>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>exec-maven-plugin</artifactId>
              <version>${version.exec-maven-plugin}</version>
              <executions>
                <execution>
                  <id>debug-windows-win32-msbuild</id>
                  <phase>compile</phase>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <executable>${cmd.msbuild}</executable>
                    <arguments>
                      <argument>/nologo</argument>
                      <argument>/maxcpucount</argument>
                      <argument>/p:SolutionDir=${solutionDir}${file.separator}</argument>
                      <argument>/p:Configuration=Debug</argument>
                      <argument>/p:Platform=Win32</argument>
                      <argument>${solutionDir}${file.separator}${solutionFile}</argument>
                    </arguments>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>build-helper-maven-plugin</artifactId>
              <version>${version.build-helper-maven-plugin}</version>
              <executions>
                <execution>
                  <id>debug-windows-win32-attach-exe</id>
                  <phase>package</phase>
                  <goals>
                    <goal>attach-artifact</goal>
                  </goals>
                  <configuration>
                    <artifacts>
                      <artifact>
                        <file>${localTarget}/DebugWin32/${publishFile}.exe</file>
                        <type>exe</type>
                        <classifier>debug-windows-win32</classifier>
                      </artifact>
                      <artifact>
                        <file>${localTarget}/DebugWin32/${publishFile}.pdb</file>
                        <type>pdb</type>
                        <classifier>debug-windows-win32</classifier>
                      </artifact>
                    </artifacts>
                  </configuration>
                </execution>
                <execution>
                  <id>debug-windows-win32-attach-lib</id>
                  <phase>package</phase>
                  <goals>
                    <goal>attach-artifact</goal>
                  </goals>
                  <configuration>
                    <artifacts>
                      <artifact>
                        <file>${localTarget}/DebugWin32/${publishFile}.lib</file>
                        <type>lib</type>
                        <classifier>debug-windows-win32</classifier>
                      </artifact>
                      <artifact>
                        <file>${localTarget}/DebugWin32/${publishFile}.pdb</file>
                        <type>pdb</type>
                        <classifier>debug-windows-win32</classifier>
                      </artifact>
                    </artifacts>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
