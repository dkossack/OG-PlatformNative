  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${version.maven-surefire-plugin}</version>
        <configuration>
          <argLine>-Dlogback.configurationFile=com/opengamma/util/warn-logback.xml</argLine>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <parallel>classes</parallel>
          <threadCount>4</threadCount>
          <groups>unit</groups>
          <excludedGroups>integration,unitdb,unitslow</excludedGroups>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>${version.maven-antrun-plugin}</version>
          <executions>
            <execution>
              <id>generate-version-header</id>
              <phase>generate-sources</phase>
              <goals>
                <goal>run</goal>
              </goals>
              <configuration>
                <target>
                  <ant antfile="${root.dir}/common/version.xml" target="version-cpp-header" />
                </target>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

